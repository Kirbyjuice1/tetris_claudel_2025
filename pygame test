import pygame
import random
import time

# --- INITIALISATION ---
pygame.init()

# Taille de la fenêtre
WIDTH = 600
HEIGHT = 600
GRID = 20

screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Snake Game par Nicholas, Hafid et Micah")

clock = pygame.time.Clock()

# Couleurs
GREEN = (0, 155, 0)
BLACK = (0, 0, 0)
RED = (255, 0, 0)
GREY = (150, 150, 150)
WHITE = (255, 255, 255)

font = pygame.font.SysFont("Courier", 24)

# --- VARIABLES ---
snake_pos = [300, 300]
snake_body = [[300, 300]]

direction = "STOP"
change_to = direction

food_pos = [random.randrange(0, WIDTH, GRID), random.randrange(0, HEIGHT, GRID)]
score = 0
high_score = 0
delay = 10


# --- FONCTIONS ---

def show_score():
    score_text = font.render(f"Score: {score}  High Score: {high_score}", True, WHITE)
    screen.blit(score_text, (WIDTH // 2 - score_text.get_width() // 2, 10))


def game_over():
    global snake_body, snake_pos, direction, score, delay

    time.sleep(1)
    snake_pos = [300, 300]
    snake_body = [[300, 300]]
    direction = "STOP"
    score = 0
    delay = 10


# --- MAIN LOOP ---
running = True
while running:

    # Fermeture de fenêtre
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

        # Contrôles
        if event.type == pygame.KEYDOWN:
            if event.key == pygame.K_w and direction != "DOWN":
                change_to = "UP"
            if event.key == pygame.K_s and direction != "UP":
                change_to = "DOWN"
            if event.key == pygame.K_a and direction != "RIGHT":
                change_to = "LEFT"
            if event.key == pygame.K_d and direction != "LEFT":
                change_to = "RIGHT"

    direction = change_to

    # Mouvement
    if direction == "UP":
        snake_pos[1] -= GRID
    if direction == "DOWN":
        snake_pos[1] += GRID
    if direction == "LEFT":
        snake_pos[0] -= GRID
    if direction == "RIGHT":
        snake_pos[0] += GRID

    # Ajout nouvelle position
    snake_body.insert(0, list(snake_pos))

    # Collision nourriture
    if snake_pos == food_pos:
        score += 10
        delay = max(3, delay - 1)

        food_pos = [random.randrange(0, WIDTH, GRID), random.randrange(0, HEIGHT, GRID)]

        if score > high_score:
            high_score = score

    else:
        snake_body.pop()

    # Collision bords
    if snake_pos[0] < 0 or snake_pos[0] >= WIDTH or snake_pos[1] < 0 or snake_pos[1] >= HEIGHT:
        game_over()

    # Collision corps
    for block in snake_body[1:]:
        if block == snake_pos:
            game_over()

    # --- AFFICHAGE ---
    screen.fill(GREEN)

    # Dessiner la nourriture
    pygame.draw.rect(screen, RED, pygame.Rect(food_pos[0], food_pos[1], GRID, GRID))

    # Dessiner le serpent
    for block in snake_body:
        pygame.draw.rect(screen, BLACK, pygame.Rect(block[0], block[1], GRID, GRID))

    show_score()

    pygame.display.update()
    clock.tick(delay)

pygame.quit()
